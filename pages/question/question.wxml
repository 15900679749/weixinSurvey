<!--pages/question/question.wxml-->
<view class='question_page'>
  <view class="question_page_top">
    <text>咖啡市场问卷调查</text>
    <text>本问卷实行匿名制度</text>
  </view>
  <view class='question'>
    <view class='question_bigitem' wx:for="{{qitem}}" wx:key="{{qitem}}">
       <block wx:if="{{item.isShow==true}}" class="bigitembg">
          <image src='../../../images/black.png'></image>
        </block>
         <block wx:else>
          <image src='../../../images/gray.png'></image>
        </block>
      <view class='question_bigitem_top ' bindtap='tagitem' data-index="{{index}}">
        <text class='bigitemtitle'>{{item.title}}</text>
        <block wx:if="{{item.isShow==true}}">
          <image src='../../../images/single_d.png'></image>
        </block>
        <block wx:else>
          <image src='../../../images/single_u.png'></image>
        </block>
      </view>
      <view class='bigitem_content {{item.isShow==true?"":"itemhidden"}}' wx:for="{{item.items}}" wx:for-item="oitem" wx:key="{{oitem}}">
        <view class='smallitem'>
          <text>{{oitem.title}}</text>
          <block wx:if="{{oitem.type=='radio'}}">
            <radio-group class="radio-group" bindchange="radioChange">
              <label class="radio" wx:for="{{oitem.options}}" wx:for-item="oitemo" wx:key="{{oitemo}}">
                <radio value="{{oitemo.name}}" checked="{{oitemo.checked}}" />{{oitemo.value}}
              </label>
            </radio-group>
          </block>
          <block wx:if="{{oitem.type=='checkbox'}}">
            <checkbox-group bindchange="checkboxChange">
              <label class="checkbox" wx:for="{{oitem.options}}" wx:for-item="oitemo" wx:key="{{oitemo}}">
                <checkbox value="{{oitemo.name}}" checked="{{oitemo.checked}}" />{{oitemo.value}}
              </label>
            </checkbox-group>
          </block>
          <block wx:if="{{oitem.type=='fill'}}">
            <input placeholder="{{oitem.placeholder}}" auto-focus bindinput="bindKeyInput" />
          </block>
          <block wx:if="{{oitem.type=='fraction'}}">
            <slider bindchange="slider4change" min="0" max="100" show-value value="100" block-size="18" activeColor="rgb(69,152,252)" />
          </block>
          <block wx:if="{{oitem.type=='loCation'}}">
            <view>{{addres}}</view>
            <button bindtap='btnchoose' type='primary'>获取当前位置</button>
          </block>
          <block wx:if="{{oitem.type=='uploadimg'}}">
            <view class="uploadimg">
              <view class='tapimgbutton' wx:if="{{!tagaction}}">
                <button bindtap="gotoShow" class='uploadimgbutton'>+</button>
              </view>
              <view class='show-image-view' bindtap="chooseImage">
                <image class="show-image" mode="aspectFitf" src="{{src}}">

                </image>
              </view>
            </view>

          </block>
          <block wx:if="{{oitem.type=='multistage'}}">
            <picker mode="region" bindchange="bindRegionChange" value="{{region}}" custom-item="{{customItem}}">
              <view class="picker">
                当前选择：{{region[0]}}，{{region[1]}}，{{region[2]}}
              </view>
            </picker>
          </block>
        </view>
      </view>
    </view>
  </view>
  <view style='flex-direction:row'>
    <button type="default" size="12" class='buttontop'>保存</button><button type="default" size="12" class='buttontop'>取消</button>
  </view>

  <button type="primary" size="default" class="primary">提交</button>
</view>