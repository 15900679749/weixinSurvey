/* pages/question/question.wxss */
page{
  background-color: #f4f5f7; 
}
.question_page{
 background-color: #f4f5f7;
 
}
.question_page_top{
 background-color: #fff;
 padding:10rpx 30px;
 text-align:center;
 
}
.question_page_top text{
  width:100%;
  display: block;
}
.question_page_top text:nth-of-type(1){
  font-size:42rpx;
  font-weight: bold;
  padding:20rpx 0 30rpx;
}
.question_page_top text:nth-of-type(2){
 text-align: left;
 color:#999;
 font-size:32rpx;
}

.question{
  margin:30rpx auto 0;
  background: white;
  width: 90%;
  border-radius: 10rpx;
  
}
.question_bigitem_top{
   
  
  padding:35rpx 20rpx 45rpx;
  background: white;
  display: flex;
  width: 100%;
  box-sizing: border-box;
  justify-content: space-between;
}
.question_bigitem_top .bigitemtitle{
 font-size:38rpx;
 font-weight: bold;
}
.question_bigitem_top image{
  height:50rpx;
  width:50rpx;
}
.bigitem_content{
  padding:0 40rpx;
}
.smallitem{
  color:#999;
  font-size:36rpx;
}
.smallitem>text{
  padding-bottom:30rpx;
  display: block;
  color:#333;
} 
.smallitem .radio,.smallitem .checkbox{
  display: block;
  margin:10rpx 0;
}
.smallitem radio,.smallitem checkbox{
transform:scale(0.7);
}
.triangle{
   border-right: 2px solid #27ab3d;
    border-top: 2px solid #27ab3d;
    height: 10px;
    width: 10px;
    margin:50px auto 0;
    transform: rotate(228deg);
    border-left: 2px solid #27ab3d;
    border-bottom: 2px solid transparent;

}
.itemhidden{
  display: none;
}